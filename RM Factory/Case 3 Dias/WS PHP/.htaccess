RewriteEngine On
RewriteRule ^login\/([a-z]+)\/([a-z]+)$ login.php?user=$1&password=$2 [NC,L]
RewriteRule ^hotel\/([0-9]+)$ hoteis.php?user=$1 [NC,L]
RewriteRule ^hotel\/status\/([0-9]+)$ status.php?hotelid=$1 [NC,L]
RewriteRule ^hotel\/reservas\/([0-9]+)\/([0-9]{4})\/([0-9]{2})\/([0-9]{2})$ reservas.php?hotelid=$1&data=$2-$3-$4 [NC,L]
RewriteRule ^hotel\/reservas\/([0-9]+)\/([0-9]{4})\/([0-9]{1})\/([0-9]{1})$ reservas.php?hotelid=$1&data=$2-$3-$4 [NC,L]
RewriteRule ^hotel\/reservas\/([0-9]+)$ reservas.php?hotelid=$1&getdays=1 [NC,L]


